{
  "name": "chatify",
  "version": "1.0.0",
  "description": "Realtime chat app, built with node.js, express and react.",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=6.0.0"
  },
  "scripts": {
    "build": "pnpm --filter client build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start:server": "pnpm --filter server start",
    "start": "pnpm build && pnpm start:server",
    "dev": "pnpm --filter ** dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fraineralex/chatify.git"
  },
  "devDependencies": {
    "ts-standard": "12.0.2",
    "typescript": "5.5.0-dev.20240417",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.6"
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json"
  },
  "keywords": [
    "chat",
    "realtime"
  ],
  "author": "Frainer Encarnaci√≥n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fraineralex/chatify/issues"
  },
  "homepage": "https://github.com/fraineralex/chatify#readme"
}

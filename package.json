{
  "name": "chatify",
  "version": "1.0.0",
  "description": "Realtime chat app, built with node.js, express and react.",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=6.0.0"
  },
  "main": "index.js",
  "scripts": {
    "build": "pnpm -w client run build",
    "lint": "eslint ./server ./client",
    "start": "cd client && pnpm run build && cd ../server && pnpm run start",
    "dev": "cd client && pnpm run build && cd ../server && pnpm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fraineralex/chatify.git"
  },
  "devDependencies": {
    "ts-standard": "12.0.2",
    "typescript": "5.4.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json"
  },
  "keywords": [
    "chat",
    "realtime"
  ],
  "author": "Frainer Encarnaci√≥n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fraineralex/chatify/issues"
  },
  "homepage": "https://github.com/fraineralex/chatify#readme"
}
